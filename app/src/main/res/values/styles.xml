<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!--启动应用防止白屏-->
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="padding_h">
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
    </style>
    <style name="padding_v">
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="homepage_bt">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">15dp</item>
    </style>

    <!--底部按钮-->
    <style name="radioButtonStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">5dp</item>
        <item name="android:textSize">14sp</item>
    </style>


    <!--字体-->
    <style name="white_12sp">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>
    <style name="white_14sp">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>
    <style name="white_16sp">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>
    <style name="white_40sp">
        <item name="android:textSize">40sp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>
    <style name="black_14sp">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>
    <style name="black_16sp">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>
    <style name="black_20sp">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>
    <style name="grey_12sp">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@android:color/darker_gray</item>
    </style>
    <style name="grey_14sp">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@android:color/darker_gray</item>
    </style>
    <style name="grey_16sp">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@android:color/darker_gray</item>
    </style>
    <style name="grey_20sp">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@android:color/darker_gray</item>
    </style>
    <style name="red_12sp">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/main_color</item>
    </style>
    <style name="red_14sp">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/main_color</item>
    </style>
    <style name="red_16sp">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/main_color</item>
    </style>
    <style name="red_20sp">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/main_color</item>
    </style>



</resources>
